<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Member">
	
	<resultMap id="memberResult" type="immovables.domain.Member">
		<result property="seq" column="SEQ" />
		<result property="id" column="ID" />
		<result property="pw" column="PW"/>
		<result property="name" column="NAME"/>
		<result property="isAdmin" column="IS_ADMIN"/>
	</resultMap>

	<select id="selectMemberList" resultMap="memberResult">
		<![CDATA[
			SELECT	ID			
				 ,	PW			
				 ,	NAME		
				 ,	IS_ADMIN
			  FROM	MEMBER
		]]>
	</select>

	<select id="selectMember" resultMap="memberResult">
		<![CDATA[
			SELECT	ID			
				 ,	PW			
				 ,	NAME		
				 ,	IS_ADMIN
			  FROM	MEMBER
			 WHERE	ID = #{id}
			   AND	PW = #{pw}
		]]>
	</select>

	<select id="selectMemberById" resultMap="memberResult">
		<![CDATA[
			SELECT	ID			
				 ,	NAME		
				 ,	IS_ADMIN
			  FROM	MEMBER
			 WHERE	ID = #{id}
		]]>
	</select>

	
	<insert id="insert">
		<![CDATA[
			INSERT INTO MEMBER (ID, PW, NAME, IS_ADMIN)VALUES(#{id}, #{pw}, #{name}, #{isAdmin})
		]]>
	</insert>
	
</mapper>

